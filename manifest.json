{
  "manifest_version": 3,
  "name": "Trustpilot Checker",
  "version": "1.0",
  "description": "Opens Trustpilot reviews for the current tab's domain.",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Check on Trustpilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
