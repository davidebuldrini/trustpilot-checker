{
  "manifest_version": 3,
  "name": "Trustpilot Checker",
  "version": "1.0",
  "description": "Opens Trustpilot reviews for the current tab's domain.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Check on Trustpilot"
  },
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  }
}